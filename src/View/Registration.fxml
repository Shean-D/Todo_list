      <Button layoutX="424.0" layoutY="55.0" mnemonicParsing="false" onAction="#btnAddNewUserOnAction" style="-fx-background-color: #020b3d;" text="Add New User" textFill="WHITE">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor></Button>
      <Label fx:id="lblUserID" alignment="CENTER" layoutX="439.0" layoutY="83.0" prefHeight="17.0" prefWidth="60.0" text="User ID" textFill="#0810f2">
         <font>
            <Font name="System Bold" size="12.0" />
         </font></Label>
      <Button fx:id="btnBackToLogin" layoutX="469.0" layoutY="333.0" mnemonicParsing="false" onAction="#btnBackToLoginOnAction" prefHeight="25.0" prefWidth="60.0" style="-fx-background-color: #020b3d;" text="Back " textFill="WHITE">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>
   </children>
</AnchorPane>
