<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="root" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.ControllerRegistration">
   <children>
      <Label layoutX="215.0" layoutY="24.0" text="User Registration" textFill="#1d056b" underline="true">
         <font>
            <Font name="System Bold" size="21.0" />
         </font>
      </Label>
      <Label layoutX="91.0" layoutY="83.0" prefHeight="10.0" prefWidth="63.0" text="User name" />
      <TextField fx:id="txtUserName" layoutX="90.0" layoutY="100.0" prefHeight="25.0" prefWidth="334.0" />
      <Label layoutX="90.0" layoutY="147.0" text="E mail" />
      <TextField fx:id="txtEmail" layoutX="90.0" layoutY="164.0" prefHeight="25.0" prefWidth="334.0" />
      <Label layoutX="84.0" layoutY="207.0" text="New Password" />
      <Label layoutX="84.0" layoutY="267.0" text="Confirm Password" />
      <Button fx:id="btnRegister" layoutX="379.0" layoutY="333.0" mnemonicParsing="false" onAction="#btnRegisterOnAction" style="-fx-background-color: #020b3d;" text="Register" textFill="WHITE">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>
      <PasswordField fx:id="txtNewPassword" layoutX="90.0" layoutY="224.0" prefHeight="25.0" prefWidth="334.0" />
      <PasswordField fx:id="txtConfirmPassword" layoutX="90.0" layoutY="284.0" onAction="#txtConfirmPasswordOnAction" prefHeight="25.0" prefWidth="334.0" />
